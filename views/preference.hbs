<p id="result"></p>

<form action="/recommendations" method="get">

  <fieldset>
    <legend>Where do you want to go?</legend>
    <label>
      <input type="radio" name="countrylocation" id="userCountry" value="" />
      <figure>
        <div><img id="countryFlag" src="" alt="" /></div>
        <figcaption>Same country</figcaption>
      </figure>
    </label>
    <label>
      <input type="radio" name="countrylocation" id="userContinent" value="" />
      <figure>
        <div><img
            id="continentFlag"
            src=""
            alt="picture of your continent"
          /></div>
        <figcaption>Own continent</figcaption>
      </figure>
    </label>
    <label>
      <input type="radio" name="countrylocation" id="global" value="global"/>
      <figure>
        <div><img
            src="images/preference_location_icons/global_location.webp"
            alt="picture of the globe"
          /></div>
        <figcaption>Global</figcaption>
      </figure>
    </label>
  </fieldset>

  <fieldset>
    <legend>Who is going?</legend>
    <label>
      <input
        type="radio"
        name="who_is_going"
        id="group_of_friends"
        value="group_of_friends"
        required
      />
      <figure>
        <div><img
            src="images/who_is_going_icons/group_of_friends.jpeg"
            alt="pic"
          /></div>
        <figcaption>Group of friends</figcaption>
      </figure>
    </label>

    <label>
      <input type="radio" name="who_is_going" id="couple" value="couple" />
      <figure>
        <div><img
            src="images/who_is_going_icons/couple_traveling.jpg"
            alt="couple traveling"
          /></div>
        <figcaption>Couple</figcaption>
      </figure>
    </label>

    <label>
      <input type="radio" name="who_is_going" id="myself" value="myself" />
      <figure>
        <div><img
            src="images/who_is_going_icons/solo_traveler.jpeg"
            alt="solo traveler"
          /></div>
        <figcaption>Myself</figcaption>
      </figure>
    </label>

    <label>
      <input type="radio" name="who_is_going" id="family" value="family" />
      <figure>
        <div><img
            src="images/who_is_going_icons/family_traveling.jpg"
            alt="family traveling"
          /></div>
        <figcaption>Family</figcaption>
      </figure>
    </label>
  </fieldset>

  <fieldset>
    <legend>Type of trip</legend>
    <label>
      <input type="radio" name="type_of_trip" id="city" value="city" required />
      <figure>
        <div><img
            src="images/type_of_trip_icons/city_trip.jpg"
            alt="city trip"
          /></div>
        <figcaption>City</figcaption>
      </figure>
    </label>

    <label>
      <input type="radio" name="type_of_trip" id="beach" value="beach" />
      <figure>
        <div><img
            src="images/type_of_trip_icons/beach_trip.jpg"
            alt="beach trip"
          /></div>
        <figcaption>Beach</figcaption>
      </figure>
    </label>

    <label>
      <input type="radio" name="type_of_trip" id="nature" value="nature" />
      <figure>
        <div><img
            src="images/type_of_trip_icons/nature_trip.jpeg"
            alt="nature trip"
          /></div>
        <figcaption>Nature</figcaption>
      </figure>
    </label>

    <label>
      <input type="radio" name="type_of_trip" id="culture" value="culture" />
      <figure>
        <div><img
            src="images/type_of_trip_icons/culture_trip.jpg"
            alt="culture trip"
          /></div>
        <figcaption>Culture</figcaption>
      </figure>
    </label>
  </fieldset>

  <fieldset>
    <legend>Budget</legend>
    <label>
      <input
        type="radio"
        name="budget"
        id="low_budget"
        value="low_budget"
        required
      />
      <figure>
        <div><img
            src="images/budget_icons/low_budget.png"
            alt="low budget icon"
          /></div>
        <figcaption>Low_budget</figcaption>
      </figure>
    </label>

    <label>
      <input type="radio" name="budget" id="reasonable" value="reasonable" />
      <figure>
        <div><img
            src="images/budget_icons/reasonable_budget.png"
            alt="reasonable icon"
          /></div>
        <figcaption>Reasonable</figcaption>
      </figure>
    </label>

    <label>
      <input type="radio" name="budget" id="no_budget" value="no_budget" />
      <figure>
        <div><img
            src="images/budget_icons/no_budget.png"
            alt="no budget icon"
          /></div>
        <figcaption>No budget</figcaption>
      </figure>
    </label>
  </fieldset>

  <div>
    <button type="submit"> Check out our recommendations</button>
    <button id="back_Btn">Go Back</button>
  </div>
</form>